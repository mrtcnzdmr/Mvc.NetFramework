@using MvcStock.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜSTERİ AD</th>
        <th>MÜŞTERİ SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var musteriler in Model)
        {
            <tr>
                <th>@musteriler.MusteriId</th>
                <td>@musteriler.MusteriAd</td>
                <td>@musteriler.MusteriSoyad</td>
                @*<td><a href="/Musteriler/Sil/@musteriler.MusteriId" class="btn btn-danger">SİL</a></td>*@
                <td>@Html.ActionLink("Sil","Sil",new { id=musteriler.MusteriId},new { @class="btn btn-danger",onclick="return confirm('Silmek İstediğinizden Emin misiniz?')"})</td>
                <td><a href="/Musteriler/MusteriGuncelle/@musteriler.MusteriId" class=" btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<td><a href="/Musteriler/YeniMusteri/" class=" btn btn-primary">YENİ MÜŞTERİ EKLE</a></td>

